.v-toolbar
    &--clipped::after
        content: ''
        position: absolute
        pointer-events: none
        box-shadow: inset 0px 4px 8px -3px rgba(17, 17, 17, .06)
        bottom: -5px
        height: 5px
        left: 0
        width: 100%

    &__side-icon.v-btn
        color: $grey.base

    &__content
        > .v-menu
            &--inline:last-of-type
                margin-left: 16px
    &__title
        a
            color: inherit
            text-decoration: none

        &:not(:first-child)
            margin-left: 12px
            width: 168px

    .v-input
        &__slot
            margin-bottom: 0
        
        &__control
            border: 1px solid hsl(0, 0%, 93.3%)
            border-radius: 3px
            box-shadow: inset 0 1px 2px #EEEEEE
            min-height: 36px !important
            max-width: 580px
