.v-card
    &__authent
        padding: 24px

        & > ^[0]__title
            flex-direction: column

            .headline:not(:first-child)
                padding-top: 16px

            .describe
                font-size: 15px
                padding-top: 8px
        
        & > ^[0]__actions
            padding: 16px 16px 8px
        
        & ^[0]__link
            font-size: 13px
            font-weight: 500
            text-decoration: none

        .divider
            padding: 0 8px
            font-weight: 100

    &__account
        .v-list
            &__tile
                font-size: 14px
                font-weight: 400
                height: 40px

                &--avatar
                    background-color: $grey.lighten-4
                    height: 72px
                    padding: 16px

                    .v-list__tile__title
                        font-size: 15px
                        font-weight: 600
                
                .v-icon
                    color: rgb(136, 136, 136)
        
        .v-divider
            border-color: hsl(0, 0%, 93.3%)
            margin: 8px 0

            &:first-of-type
                margin: 0 0 8px
    