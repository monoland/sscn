.page
    &__header
        align-items: center
        display: flex
        height: 88px
        max-height: 88px;
    
    &__data
        background: white
    
    &__title
        align-items: center
        display: flex
        padding: 0 24px

        &--text
            margin-left: 24px
            font-size: 24px

            .subtitle
                color: $grey.darken-1
                font-size: 14px
    
    &__find
        background: $grey.lighten-5
        position: absolute
        height: 88px
        width: 100%
        display: flex
        align-items: center
        padding: 0 24px
        
        &--text
            font-size: 22px
            font-weight: 300
            width: 100%
            outline: none

        .v-btn
            margin: 0

    &__actions
        flex-grow: 1
        padding: 0 24px
        text-align: right

        &--wrapper
            cursor: default

            .v-btn
                margin: 4px
                // &:not(:last-child)
                //     margin: 0
                    
                &:last-child
                    margin-right: 0

        