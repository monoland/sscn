.v-navigation-drawer
    &__border
        display: none
    
    .v-list
        padding: 12px 0

        &__tile
            padding: 0 24px
            height: 40px

            &--active
                background-color: rgba(0, 0, 0, 0.09)

                &:hover
                    background-color: rgba(0, 0, 0, 0.09) !important
                
                .v-list__tile__action
                    color: $red.base

                .v-list__tile__title
                    color: rgba(0,0,0,0.87) !important
                    font-weight: 500
            
            &__action
                min-width: 48px

                .v-icon
                    color: rgb(136, 136, 136)
            
            &__title
                font-weight: 400
        
        .v-divider
            border-color: hsl(0, 0%, 93.3%)
            margin: 8px 0

            &:first-of-type
                margin: 12px 0 8px
        
        .v-subheader
            padding: 0 24px
            height: 32px
            text-transform: uppercase