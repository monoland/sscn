.card
    &__flex
        &--toolbar
            margin-top: -65px
            

.v-card
    &__dialog
        & ^[0]__text
            padding: 0 16px 8px
    
    &__progress
        position: absolute
        bottom: 12px
        right: 12px
    
    &__chart
        canvas
            height: 70%
            width: 90%
    
    &__active
        background: $cyan.lighten-5 !important
        
        &.hover-off
            box-shadow: 0px 7px 8px -4px rgba(0,0,0,0.2), 0px 12px 17px 2px rgba(0,0,0,0.14), 0px 5px 22px 4px rgba(0,0,0,0.12) !important
            z-index: 1 !important

    &__table
        padding: 0 8px

    &__statistic
        padding-left: 16px
        
        &--title
            font-size: 12px
            font-weight: bold
        
        &--value
            font-size: 27px
            font-weight: 100
            line-height: 1